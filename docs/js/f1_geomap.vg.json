{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 1000,
    "height": 500,
    "title": "F1 circuits around the globe",
    "projection": {"type": "equalEarth"},
    "layer": [
        {
          "data": {
            "url": "https://raw.githubusercontent.com/AeroG81/DataVisualisation/main/docs/topojson/ne_110m_admin_0_countries.topojson",
            "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
          },
          "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "white"}
        },
        {
          "data": {
            "url": "https://raw.githubusercontent.com/AeroG81/DataVisualisation/main/docs/Dataset/circuits.csv"
          },
          "mark": {
              "type": "circle"
            },
          "encoding": { 
            "longitude": {"field": "lng", "type": "quantitative"},
            "latitude": {"field": "lat", "type": "quantitative"},
            "size": {"value":30},
            "tooltip": [
                {"field": "name","type": "nominal", "title": "Circuit name"},
                {"field": "country","type": "nominal", "title": "Country"},
                {"field": "location","type": "nominal", "title": "Location"}
            ],
            "color": {
            "field": "country",
            "type": "nominal"
          }
          }

        }
      ]
}